version: "3"
services:
  nginx:
    image: registry.cn-shenzhen.aliyuncs.com/rain_sunshine_cloud/nginx
    ports:
      - "${NGINX_PORT}:80"
    depends_on:
      - php
    networks:
      - "lnmp"
    volumes:
      - type: "bind"
        source: "${CONF_ROOT}/nginx/conf.d"
        target: "/etc/nginx/conf.d"
        read_only: true
      - type: "bind"
        source: "${CONF_ROOT}/nginx/nginx.conf"
        target: "/etc/nginx/nginx.conf"
        read_only: true
      - type: "volume"
        source: "${APP_ROOT}"
        target: "/data/app"
      - type: "volume"
        source: "${LOG_ROOT}/nginx"
        target: "/data/nginx/log"
    container_name: nginx
  php:
    image: registry.cn-shenzhen.aliyuncs.com/rain_sunshine_cloud/php
    volumes:
      - type: "bind"
        source: "${CONF_ROOT}/php"
        target: "/usr/local/etc/"
        read_only: true
      - type: "volume"
        source: "${LOG_ROOT}/php" 
        target: "/data/php/log"
      - type: "volume"
        source: "${APP_ROOT}/app"
        target: "/data/app"
    depends_on:
      - mysql
      - redis
      - mongo
    container_name: php
    networks:
      - "lnmp"
  mysql:
    image: mysql
    ports:
      - "${MYSQL_PORT}:3306"
    networks:
      - "lnmp"
    volumes:
      - type: "bind"
        source: "${CONF_ROOT}/mysql"
        target: "/etc/mysql"
        read_only: true
      - type: "volume"
        source: "${DATA_ROOT}/mysql"
        target: "/var/lib/mysql"
    environment:
      - MYSQL_ROOT_PASSWORD  
    container_name: mysql
  redis:
    image: redis
    ports:
      - "${REDIS_PORT}:6379"
    volumes:
      - type: "bind"
        source: "${CONF_ROOT}/redis"
        target: "/usr/local/etc"
        read_only: true
    command: ["redis-server","/usr/local/etc/redis.conf"]
    container_name: redis
  mongo:
    image: mongo
    ports:
      - "${MONGO_PORT}:27017"
    networks:
      - "lnmp"
    volumes:
      - type: volume
        source: ${DATA_ROOT}/mongo
        target: /data/db
      - type: bind
        source: ${CONF_ROOT}/mongo
        target: /data/configdb
        read_only: true
      - type: bind
        source: ${LOG_ROOT}/mongo
        target: /data/log
    command: ["mongod","--config","/data/configdb/mongo.conf"]
    container_name: mongo
networks:
  lnmp:
    driver: bridge   
volumes:
  lnmp:

